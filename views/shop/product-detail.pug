extends ../_layouts/layout.pug
block styles
  link(rel="stylesheet", href="/css/product.css")
block content
  main.centered
    if product
      h1= product.title
      hr
      div
        img(src= product.image, alt= product.title, style="width:100%")
      h2= Intl.NumberFormat('en-CA', { style: 'currency', currency: 'CAD' }).format(product.price)
      p= product.description
      include ../_layouts/addCartButton.pug
    else
      h1 No product found!