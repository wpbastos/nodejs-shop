extends ../_layouts/layout.pug
block styles
  link(rel="stylesheet", href="/css/order.css")
block content
  main
    if orders.length > 0
      ul.orders
        each order in orders
          li.orders__item
            span
              h1 Order - #{order._id}
              h2 Total - #{order.total}
            ul.orders__products
              each item in order.products
                li.orders__products-item #{item.product.title} (#{item.quantity})
    else
      h1 Nothing here!
