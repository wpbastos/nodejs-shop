extends ../_layouts/layout.pug
block styles
  link(rel="stylesheet", href="/css/cart.css")
block content
  main
    if cartProducts.length > 0
      ul.cart__item-list
        each cartProduct in cartProducts
          li.cart__item
            h1 #{cartProduct.title}
            h2 Quantity: #{cartProduct.cartItem.quantity}
            form(action="/cart-delete-item", method="POST")
              input(type="hidden", name="id", value=cartProduct.id)
              button.btn.danger(type="submit") DELETE
      hr
      div.centered
        form(action="/create-order", method="POST")
          button.btn(type="submit") Order
    else
      h1 No products in cart!
