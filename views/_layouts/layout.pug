<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title My Shop - #{titlePage}
    link(rel="stylesheet", href="/css/main.css")
    block styles
  body
    .backdrop
    header.main-header
      button#side-menu-toggle Menu
      nav.main-header__nav
        ul.main-header__item-list
          li.main-header__item
            a(href="/", class=(path === '/' ? 'active' : '')) Home
          li.main-header__item
            a(href="/product", class=(path === '/product' ? 'active' : '')) Products
          li.main-header__item
            a(href="/cart", class=(path === '/cart' ? 'active' : '')) Cart
          li.main-header__item
            a(href="/order", class=(path === '/order' ? 'active' : '')) Orders
          li.main-header__item
            a(href="/admin/add-product", class=(path === '/admin/add-product' ? 'active' : '')) Add Product
          li.main-header__item
            a(href="/admin/product", class=(path === '/admin/product' ? 'active' : '')) Admin Products
    nav.mobile-nav
      ul.mobile-nav__item-list
        li.mobile-nav__item
           a(href="/", class=(path === '/' ? 'active' : '')) Home
        li.mobile-nav__item
            a(href="/product", class=(path === '/product' ? 'active' : '')) Products
        li.mobile-nav__item
            a(href="/cart", class=(path === '/cart' ? 'active' : '')) Cart
        li.mobile-nav__item
            a(href="/order", class=(path === '/order' ? 'active' : '')) Orders
        li.mobile-nav__item
            a(href="/admin/add-product", class=(path === '/admin/add-product' ? 'active' : '')) Add Product
        li.mobile-nav__item
            a(href="/admin/product", class=(path === '/admin/product' ? 'active' : '')) Admin Products
    block content
    script(src="/js/main.js")
